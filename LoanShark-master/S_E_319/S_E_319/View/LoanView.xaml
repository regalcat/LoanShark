<Window x:Class="S_E_319.LoanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoanView" Height="200" Width="450">
    <Grid>

        <Label Content="Name" HorizontalAlignment="Left" Margin="30,32,0,0" VerticalAlignment="Top" Width="64" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="111,34,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="264" Name="BorrowerName"/>



        <Label Content="Day Loaned" HorizontalAlignment="Left" Margin="30,73,0,0" VerticalAlignment="Top" Width="81" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Loan Item" HorizontalAlignment="Left" Margin="111,117,0,0" VerticalAlignment="Top" Width="118" Click="Loan_Button" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="257,117,0,0" VerticalAlignment="Top" Width="118" Click="Cancel_Button" />

        <TextBox HorizontalAlignment="Left" Height="25" Margin="111,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" Name="Month" Text="Month"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="215,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Name="Day" Text="Day"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="303,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Name="Year" Text="Year"/>

    </Grid>
</Window>
