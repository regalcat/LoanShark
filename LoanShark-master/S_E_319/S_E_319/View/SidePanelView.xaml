<UserControl x:Class="S_E_319.SidePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{Binding BackgroundColor, TargetNullValue='White'}">
        <TextBlock
            Text="{Binding Title, TargetNullValue='Title'}"
            />
        <TextBlock
            Text="{Binding Author, TargetNullValue='Author'}"
            />
        <TextBlock
            Text="{Binding Genre, TargetNullValue='Genre'}"
            />
        <TextBlock
            Text="{Binding Description, TargetNullValue='Decription'}"
            />
        <TextBlock
            Text="{Binding Borrower, TargetNullValue='Borrower'}"
            />
        <TextBlock
            Text="{Binding BorrowDate, TargetNullValue='Borrow Date'}"
            />
        <CheckBox
            IsChecked="{Binding Favorite, TargetNullValue=false}"
            />
        <CheckBox
            IsChecked="{Binding Loaned, TargetNullValue=false}"
            />
    </Grid>
</UserControl>
